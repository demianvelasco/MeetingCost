<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/name_meeting_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/input_average_salary"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="@string/input_meeting_name_hint" />

    <EditText
        android:id="@+id/input_number_of_employees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/input_average_salary"
        android:layout_below="@+id/input_average_salary"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/input_number_employee_hint"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/input_average_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_meeting_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="@string/average_salary_hint"
        android:inputType="numberDecimal" >
    </EditText>

    <Button
        android:id="@+id/btn_start_meeting"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="42dp"
        android:text="@string/start_meeting" />

</RelativeLayout>